if not game:IsLoaded() then game.Loaded:Wait() end
local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local lp = Players.LocalPlayer

pcall(function()
    lp.Character:FindFirstChild("Humanoid").BreakJointsOnDeath = false
end)

local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "HubMinato"

local MainBtn = Instance.new("TextButton", ScreenGui)
MainBtn.Size = UDim2.new(0, 150, 0, 40)
MainBtn.Position = UDim2.new(0.01, 0, 0.1, 0)
MainBtn.Text = "TP para BASE"
MainBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainBtn.TextColor3 = Color3.new(1, 1, 1)
MainBtn.BorderSizePixel = 0

local function TeleportToBase()
    local base = workspace:FindFirstChild("BrainrotBase") or workspace:FindFirstChildWhichIsA("Part", true)
    if base then
        lp.Character:SetPrimaryPartCFrame(CFrame.new(base.Position + Vector3.new(0, 5, 0)))
    end
end

MainBtn.MouseButton1Click:Connect(TeleportToBase)

lp.CharacterAdded:Connect(function(char)
    char:WaitForChild("Humanoid").WalkSpeed = 75
    char:WaitForChild("Humanoid").JumpPower = 230
end)

ScreenGui.DescendantRemoving:Connect(function(child)
    if not getgenv().AllowGuiRemoval then
        wait(0.1)
        child:Clone().Parent = ScreenGui
    end
end)

local Admins = {
    [123456789] = true,
    [987654321] = true,
}

local function ServerHop()
    local servers = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
    for _, server in pairs(servers.data) do
        if server.playing < server.maxPlayers then
            TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id, lp)
            return
        end
    end
end

for _, plr in pairs(Players:GetPlayers()) do
    if Admins[plr.UserId] then
        ServerHop()
    end
end

Players.PlayerAdded:Connect(function(plr)
    if Admins[plr.UserId] then
        ServerHop()
    end
end)

lp.Character:WaitForChild("Humanoid").WalkSpeed = 75
lp.Character:WaitForChild("Humanoid").JumpPower = 230













































































