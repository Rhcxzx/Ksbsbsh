-- Hub Minato ‚Äî Steal a Brainrot Script
-- Interface organizada por se√ß√£o

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "HubMinatoUI"
ScreenGui.ResetOnSpawn = false

-- üü® GUI principal
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 300, 0, 450)
Frame.Position = UDim2.new(0, 30, 0.5, -225)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Text = "üåÄ Hub Minato"
Title.BackgroundColor3 = Color3.fromRGB(255, 215, 0)
Title.TextColor3 = Color3.new(0, 0, 0)
Title.TextScaled = true
Title.Font = Enum.Font.SourceSansBold

local UIList = Instance.new("UIListLayout", Frame)
UIList.Padding = UDim.new(0, 6)
UIList.FillDirection = Enum.FillDirection.Vertical
UIList.SortOrder = Enum.SortOrder.LayoutOrder

local function createButton(text, callback)
	local btn = Instance.new("TextButton", Frame)
	btn.Size = UDim2.new(1, -10, 0, 32)
	btn.Position = UDim2.new(0, 5, 0, 0)
	btn.Text = text
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 18
	btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	btn.TextColor3 = Color3.new(1, 1, 0)
	btn.BorderSizePixel = 0
	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- üîÑ Minimizar GUI
local function toggleGUI() Frame.Visible = not Frame.Visible end
createButton("üîÑ Minimizar / Expandir GUI", toggleGUI)

-- üîë Keybind 'L'
UserInputService.InputBegan:Connect(function(input)
	if input.KeyCode == Enum.KeyCode.L then
		ScreenGui.Enabled = not ScreenGui.Enabled
	end
end)

-- üß≠ MOVIMENTA√á√ÉO
createButton("ü¶ò Pulo Alto", function()
	local hum = Character:FindFirstChildWhichIsA("Humanoid")
	if hum then hum.JumpPower = 150 end
end)

createButton("‚ö° Speed Boost", function()
	local hum = Character:FindFirstChildWhichIsA("Humanoid")
	if hum then hum.WalkSpeed = 60 end
end)

-- ESP Inimigos + Brainrot
local espOn = false
local function toggleESP()
	espOn = not espOn
	for _, p in pairs(Players:GetPlayers()) do
		if p ~= LocalPlayer and p.Character then
			local head = p.Character:FindFirstChild("Head")
			if head then
				local existing = head:FindFirstChild("ESP")
				if espOn and not existing then
					local bill = Instance.new("BillboardGui", head)
					bill.Name = "ESP"
					bill.Size = UDim2.new(0, 100, 0, 30)
					bill.Adornee = head
					bill.AlwaysOnTop = true
					local lbl = Instance.new("TextLabel", bill)
					lbl.Size = UDim2.new(1, 0, 1, 0)
					lbl.BackgroundTransparency = 1
					lbl.Text = "INIMIGO"
					lbl.TextColor3 = Color3.new(1, 0, 0)
					lbl.TextScaled = true
				elseif not espOn and existing then
					existing:Destroy()
				end
			end
		end
	end

	for _, obj in pairs(workspace:GetDescendants()) do
		if obj:IsA("Part") and obj.Name:lower():find("brain") then
			local existing = obj:FindFirstChild("ESP")
			if espOn and not existing then
				local bill = Instance.new("BillboardGui", obj)
				bill.Name = "ESP"
				bill.Size = UDim2.new(0, 100, 0, 30)
				bill.Adornee = obj
				bill.AlwaysOnTop = true
				local lbl = Instance.new("TextLabel", bill)
				lbl.Size = UDim2.new(1, 0, 1, 0)
				lbl.BackgroundTransparency = 1
				lbl.Text = "üß† BRAINROT"
				lbl.TextColor3 = Color3.new(0, 1, 1)
				lbl.TextScaled = true
			elseif not espOn and existing then
				existing:Destroy()
			end
		end
	end
end

createButton("üëÅÔ∏è Toggle ESP", toggleESP)

-- üè† BASE & CASH
createButton("üè† TP para Base", function()
	local base = workspace:FindFirstChild("Base") or workspace:FindFirstChild("YourBaseName")
	if base then Character:PivotTo(base.CFrame + Vector3.new(0,5,0)) end
end)

local autoLock = false
createButton("üîí Auto Lock Base", function()
	autoLock = not autoLock
	task.spawn(function()
		while autoLock do wait(1)
			local r = game:GetService("ReplicatedStorage"):FindFirstChild("LockBase")
			if r then r:FireServer() end
		end
	end)
end)

local autoCash = false
createButton("üí∞ Auto Cash", function()
	autoCash = not autoCash
	task.spawn(function()
		while autoCash do wait(0.5)
			for _, p in pairs(workspace:GetDescendants()) do
				if p:IsA("Part") and p.Name == "Cash" then
					Character:PivotTo(p.CFrame + Vector3.new(0,3,0))
				end
			end
		end
	end)
end)

-- üöÄ EXTRAS: Server Hop Inteligente
local function lootRuim()
	for _, p in pairs(workspace:GetDescendants()) do
		if p:IsA("Part") and p.Name:lower():find("brain") then
			local name = p.Name:lower()
			if name:find("epic") or name:find("legend") or name:find("god") then
				return false
			end
		end
	end
	return true
end

local function hop()
	local data = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
	for _, s in pairs(data.data) do
		if s.playing < s.maxPlayers and s.id ~= game.JobId then
			TeleportService:TeleportToPlaceInstance(game.PlaceId, s.id)
			break
		end
	end
end

createButton("üöÄ Smart Server Hop", function()
	if lootRuim() then
		hop()
	else
		local n = Instance.new("TextLabel", ScreenGui)
		n.Size = UDim2.new(0, 300, 0, 50)
		n.Position = UDim2.new(0.5, -150, 0, 0)
		n.Text = "‚úÖ Loot bom aqui! Nada a fazer."
		n.TextColor3 = Color3.new(1, 1, 1)
		n.BackgroundTransparency = 0.4
		n.BackgroundColor3 = Color3.fromRGB(50, 205, 50)
		n.TextScaled = true
		wait(3); n:Destroy()
	end
end)
